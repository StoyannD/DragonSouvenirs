@using DragonSouvenirs.Web.Components
@model DragonSouvenirs.Web.ViewModels.Orders.CreateOrderViewModel

<section class="breadcrumb-section set-bg"
         data-setbg=""
         style="background-color: #85603f">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home"
                           asp-action="Index">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form enctype="multipart/form-data"
                  asp-controller="Orders"
                  asp-action="Create"
                  method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <label asp-for="@Model.FirstName">Fist Name<span>*</span></label>
                                    <input type="text"
                                           asp-for="@Model.FirstName"
                                           value="@Model.FirstName">
                                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <label asp-for="@Model.LastName">Last Name<span>*</span></label>
                                    <input type="text"
                                           asp-for="@Model.LastName"
                                           value="@Model.LastName">
                                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <label asp-for="@Model.ShippingAddress">Address<span>*</span></label>
                            <input class="checkout__input__add"
                                   type="text"
                                   asp-for="@Model.ShippingAddress"
                                   value="@Model.ShippingAddress">
                            <span asp-validation-for="@Model.ShippingAddress" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <label asp-for="@Model.InvoiceNumber">Phone<span>*</span></label>
                                    <input class="checkout__input__add"
                                           type="text"
                                           asp-for="@Model.InvoiceNumber"
                                           value="@Model.InvoiceNumber">
                                    <span asp-validation-for="@Model.InvoiceNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <label asp-for="@Model.UserFullName">Email<span>*</span></label>
                                    <input class="checkout__input__add"
                                           type="text"
                                           asp-for="@Model.UserFullName"
                                           value="@Model.UserFullName">
                                    <span asp-validation-for="@Model.UserFullName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <label asp-for="@Model.UserEmail">Email<span>*</span></label>
                            <input class="checkout__input__add"
                                   type="text"
                                   asp-for="@Model.UserEmail"
                                   value="@Model.UserEmail">
                            <span asp-validation-for="@Model.UserEmail" class="text-danger"></span>
                        </div>
                        <div class="checkout__input">
                            <label asp-for="@Model.Notes">Order notes<span>*</span></label>
                            <input class="checkout__input__add"
                                   placeholder="Notes about your order, e.g. special notes for delivery."
                                   type="text"
                                   asp-for="@Model.Notes"
                                   value="@Model.Notes">
                            <span asp-validation-for="@Model.Notes" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            @await Component.InvokeAsync(typeof(CartProductsSimpleComponent))
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->