@model DragonSouvenirs.Web.ViewModels.Categories.ProductInCategoryViewModel
<div class="col-md-4 d-flex mt-5">
    <div class="card p-3 bg-white">
        <i class="fa fa-apple"></i>
        <div class="about-product text-center mt-2">
            <a asp-controller="Products" asp-action="ById" asp-route-id="@Model.Id">
                <img src="@Model.ImgUrl" width="300" height="200">
            </a>
            <div>
                <h4>@Model.Name</h4>
                <h6 class="mt-0 text-black-50">@Model.Title</h6>
            </div>
        </div>
        <div class="stats mt-2">
            <div class="text-center">
                <h6>@Model.Description</h6>
            </div>
            <div class="d-flex justify-content-between p-price">
                <p></p>
            </div>
                <div class="d-flex justify-content-between p-price">
                    <span>Размери:</span>
                    <span>Наличност: @Model.Quantity</span>
                </div>
                <div class="d-flex justify-content-between p-price">
                    <span>@(Model.Height) x @(Model.Width) см.</span>
                </div>
            </div>
            <div class="d-flex justify-content-between total font-weight-bold mt-4">
                <span></span>
                <span>Цена: @Model.Price лв.</span>
            </div>
        </div>
</div>