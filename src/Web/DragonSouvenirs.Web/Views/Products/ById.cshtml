@model DragonSouvenirs.Web.ViewModels.Products.ProductViewModel
@{ this.ViewData["Title"] = Model.Title; }


<section class="mb-5">
    <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">

            <div id="mdb-lightbox-ui"></div>

            <div class="mdb-lightbox">

                <div class="row product-gallery mx-1">

                    <div class="col-12 mb-0">
                        <figure class="view overlay rounded z-depth-1 main-img">
                            <img src="@(Model.Images.Any()
                                          ? Model.Images.ElementAt(0).ImgUrl
                                          :"")" class="img-fluid z-depth-1">
                        </figure>
                    </div>
                    <div class="col-12">
                        <div class="row">
                            @foreach (var img in @Model.Images)
                            {
                <partial name="_SecondaryImagesPartial" model="img" />}
                        </div>
                    </div>
                </div>

            </div>

        </div>
        <div class="col-md-6">

            <h5>@Model.Name</h5>
            <p class="mb-2 text-muted text-uppercase small">@Model.CategoryName</p>
            <span>
                <i class="fas fa-star fa-sm text-primary"></i>
                <i class="fas fa-star fa-sm text-primary"></i>
                <i class="fas fa-star fa-sm text-primary"></i>
                <i class="fas fa-star fa-sm text-primary"></i>
            </span>
            <p><span class="mr-1"><strong>@Model.Price лв.</strong></span></p>
            <p class="pt-1">
                @Model.Description
            </p>
            <div class="table-responsive">
                <table class="table table-sm table-borderless mb-0">
                    <tbody>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>Размери: </strong></th>
                            <td>@Model.Height х @Model.Width см.</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>Наличност: </strong></th>
                            <td>@Model.Quantity</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>Доствака: </strong></th>
                            <td>Еконт, Спиди</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                <button type="button"
                        class="btn btn-primary btn-md mr-1 mb-2">
                    Купи сега
                </button>
                <a asp-controller="Cart"
                   asp-action="Add"
                   asp-route-id="@Model.Id"
                   class="btn btn-light btn-md mr-1 mb-2">
                    <i class="fas fa-shopping-cart pr-2"></i>Добави в количка
                </a>
                @*<button type="button" class="btn btn-light btn-md mr-1 mb-2">
                        <i class="fas fa-shopping-cart pr-2"></i>Добави в количка
                    </button>*@
            </div>
        </div>
    </div>

</section>