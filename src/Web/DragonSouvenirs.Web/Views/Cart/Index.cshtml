@using DragonSouvenirs.Common
@model DragonSouvenirs.Web.ViewModels.Cart.CartAllProductsViewModel


<section class="breadcrumb-section set-bg"
         data-setbg=""
         style="background-color: #85603f">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Количка</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home"
                           asp-action="Index">Home</a>
                        <span>Количка</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Продукт</th>
                                <th>Цена</th>
                                <th>Количество</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>                        
                        @if (this.Model.CartProducts.Any())
                        {
                            @foreach (var product in this.Model.CartProducts)
                            {
                                <partial name="Partials/_ProductInCartPartial" model="product"/>
                            }
                        }
                        else
                        {
                            <p>Нямате добавени продукти в количката.</p>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-route="shopRoute"
                       class="primary-btn cart-btn">КЪМ МАГАЗИН</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        ОБНОВИ КОЛИЧКА
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Цена <span>@Model.TotalPriceBeforeDiscount лв.</span></li>
                        <li>Намаления <span class="CartDiscount">@(Model.TotalPriceBeforeDiscount-Model.TotalPrice) лв.</span></li>
                        <li>Total <span>@Model.TotalPrice лв.</span></li>
                    </ul>
                    <a class="primary-btn"
                       asp-controller="Orders"
                       asp-action="Create">
                        Направи поръчка
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->