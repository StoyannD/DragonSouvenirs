@using DragonSouvenirs.Common
@model DragonSouvenirs.Web.ViewModels.Cart.CartAllProductsViewModel


<div class="px-4 px-lg-0">
    <div class="pb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

                    <!-- Shopping cart table -->
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="p-2 px-3 text-uppercase">Product</div>
                                    </th>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">Price</div>
                                    </th>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">Quantity</div>
                                    </th>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">Remove</div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in this.Model.CartProducts)
                                {
                                    <tr>
                                        <th scope="row" class="border-0">
                                            <div class="p-2">
                                                <img src="@(product.ProductImages
                                                      .FirstOrDefault()?.ImgUrl ?? string.Empty)"
                                                     alt=""
                                                     width="70"
                                                     class="img-fluid rounded shadow-sm">
                                                <div class="ml-3 d-inline-block align-middle">
                                                    <h5 class="mb-0">
                                                        <a asp-controller="Products"
                                                           asp-action="ById"
                                                           asp-route-id="@product.ProductId"
                                                           class="text-dark d-inline-block align-middle">
                                                            @product.ProductName
                                                        </a>
                                                    </h5><span class="text-muted font-weight-normal font-italic d-block">
                                                        @product.ProductProductCategories.FirstOrDefault()?.CategoryName
                                                    </span>
                                                </div>
                                            </div>
                                        </th>
                                        <td class="border-0 align-middle">
                                            <strong>@product.ProductPrice x @product.Quantity = @product.TotalPrice лв.</strong>
                                        </td>
                                        <td class="border-0 align-middle" style="width: 10rem;">
                                            <form enctype="multipart/form-data"
                                                  method="post"
                                                  asp-controller="Cart"
                                                  asp-action="Edit"
                                                  asp-route-id="@product.ProductId"
                                                  asp-route-quantity="quantity">
                                                <div class="row">
                                                    <input type="number"
                                                           min="1"
                                                           max="@product.ProductQuantity"
                                                           id="quantity"
                                                           name="quantity"
                                                           class="form-control col-sm-5"
                                                           value="@product.Quantity" />&nbsp;
                                                    <span asp-validation-for="@product.Quantity"
                                                          class="text-danger"></span>
                                                    <button type="submit" class="btn btn-sm btn-primary">Edit</button>
                                                </div>
                                            </form>
                                        </td>
                                        <td class="border-0 align-middle">
                                            <a asp-controller="Cart"
                                               asp-action="Remove"
                                               asp-route-id="@product.ProductId"
                                               class="text-dark">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="float-right">
                        <div>
                            <strong>
                                Total : @Model.TotalPrice лв.
                            </strong>
                        </div>
                        <div>
                            <a class="btn btn-outline-primary" 
                               asp-controller="Orders"
                               asp-action="Create">
                                Поръчай <i class="fas fa-shopping-cart"></i>
                            </a>
                        </div>
                    </div>
                    <!-- End -->
                </div>
            </div>
        </div>
    </div>
</div>