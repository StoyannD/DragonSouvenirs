@using DragonSouvenirs.Common
@model DragonSouvenirs.Web.ViewModels.Components.CartProductsSimpleComponent.CartViewModel

<h4>Поръчка</h4>
<div class="checkout__order__products">Продукти <span>Total</span></div>
<ul>
    @foreach (var carProduct in this.Model.Products)
    {
        <li>
            @carProduct.ProductName
            <span>лв.</span>
            <span>@(carProduct.TotalPrice) </span>
            @if (carProduct.ProductDiscountPrice != null)
            {
                <span class="beforeDiscount">
                    @carProduct.TotalPriceBeforeDiscounts
                </span>
            }
        </li>
    }
</ul>
<div class="checkout__order__subtotal">
    Общо <span>@Model.TotalPriceBeforeDiscounts лв.</span>
    <br />
    Доставка <span>@GlobalConstants.Order.DeliveryPrice лв.</span>
    <br/>
    Намаления <span>@(Model.TotalPriceBeforeDiscounts-Model.TotalPrice) лв.</span>
</div>
<div class="checkout__order__total">Total <span>@(Model.TotalPrice+GlobalConstants.Order.DeliveryPrice) лв.</span></div>
