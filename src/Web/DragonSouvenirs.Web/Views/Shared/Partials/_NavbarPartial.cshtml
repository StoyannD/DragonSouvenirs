@using DragonSouvenirs.Web.Components

<div class="humberger__menu__overlay"></div>
<div class="humberger__menu__wrapper">
    <div class="humberger__menu__logo">
        <a asp-area=""
           asp-controller="Home"
           asp-action="Index"><img src="@DragonSouvenirs.Common.CommonImageUrls.Home.Logo" alt=""></a>
    </div>
    @await Component.InvokeAsync(typeof(CartBasketComponent))
    <div class="humberger__menu__widget">
        <partial name="Partials/_LoginPartialMobile" />
    </div>
    <nav class="humberger__menu__nav mobile-menu">
        <ul>
            <li class="active">
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="Index">Начало</a>
            </li>
            <li>
                <a asp-route="shopRoute">Магазин</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="ForUs">За нас</a>
            </li>
            <li>
                <a asp-route="contactRoute">Контакти</a>
            </li>
            <li>
                <a asp-route="myOrdersRoute">Мои Поръчки</a>
            </li>
        </ul>
    </nav>
    <div id="mobile-menu-wrap"></div>
    <div class="header__top__right__social">
        <a asp-controller="Home" asp-action="Index"><i class="fa fa-facebook"></i></a>
        <a asp-controller="Home" asp-action="Index"><i class="fa fa-instagram"></i></a>
    </div>
    <div class="humberger__menu__contact">
        <ul>
            <li><i class="fa fa-envelope"></i> stoyandraganov875@gmail.com</li>
            <li>Безплатна доставка при поръчка над 80лв.</li>
        </ul>
    </div>
</div>

<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__left">
                        <ul>
                            <li><i class="fa fa-envelope"></i> stoyandraganov875@gmail.com</li>
                            <li>Безплатна доставка при поръчка над 80лв.</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__right">
                        <div class="header__top__right__social">
                            <a asp-controller="Home" asp-action="Index"><i class="fa fa-facebook"></i></a>
                            <a asp-controller="Home" asp-action="Index"><i class="fa fa-instagram"></i></a>
                        </div>
                        <partial name="Partials/_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-2" align="center">
                <div class="header__logo">
                    <a asp-area=""
                       asp-controller="Home"
                       asp-action="Index"><img src="~/img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-lg-7" align="center">
                <nav class="header__menu">
                    <ul>
                        <li class="active">
                            <a asp-area=""
                               asp-controller="Home"
                               asp-action="Index">Начало</a>
                        </li>
                        <li>
                            <a asp-route="shopRoute">Магазин</a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="ForUs">За нас</a>
                        </li>
                        <li>
                            <a asp-route="contactRoute">Контакти</a>
                        </li>
                        <li>
                            <a asp-route="myOrdersRoute">Мои Поръчки</a>
                        </li>
                    </ul>
                </nav>
            </div>
            @await Component.InvokeAsync(typeof(CartBasketComponent))
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>