@model string

<section class="breadcrumb-section set-bg"
         data-setbg=""
         style="background-color: #85603f">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>@Model</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home"
                           asp-action="Index">Начало</a>
                        <span>@Model</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>