@model DragonSouvenirs.Web.ViewModels.Administration.Users.ApplicationUserViewModel

<td>@this.Model.UserName</td>
<td>@this.Model.FullName</td>
<td>@this.Model.Email</td>
<td>@this.Model.ShortShippingAddress</td>
<td>@this.Model.CreatedOn</td>
<td>@this.Model.CreatedOn</td>
<td>
    <input asp-for="@this.Model.IsDeleted"
           type="checkbox"
           disabled="disabled">
</td>
<td>
    <div class="d-flex flex-row justify-content-center">
        <div class="p-2">
            <a class="btn btn-warning"
               asp-controller="Users"
               asp-action="Edit"
               asp-route-id="@this.Model.Id">Редактирай</a>
        </div>
        @if (!this.Model.IsAdmin) 
        { 
            <div class="p-2">
                <a class="btn btn-danger"
                   asp-controller="Users"
                   asp-action="Ban"
                   asp-route-id="@this.Model.Id">Ban</a>
            </div>
            <div class="p-2">
                <form asp-area="Administration"
                      asp-controller="Users"
                      asp-action="UnBan"
                      asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-success">Unban</button>
                </form>
            </div>
        }
    </div>
</td>
