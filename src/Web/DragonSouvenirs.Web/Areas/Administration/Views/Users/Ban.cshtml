@model DragonSouvenirs.Web.ViewModels.Administration.Users.UserConfirmModel

<div align="center">
    <div class="modal-content align-items-center" style="width: 25rem;">
        <div class="modal-header flex-column align-items-center">
            <div>
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h4 class="modal-title w-100">Are you sure?</h4>
        </div>
        <div class="modal-body">
            <p>Do you really want to ban user: @Model.UserName?</p>
        </div>
        <div class="modal-footer justify-content-center">
            <a asp-controller="Users"
               asp-action="Index"
               class="btn btn-secondary">
                Cancel
            </a>
            <form asp-area="Administration"
                  asp-controller="Users"
                  asp-action="Ban"
                  asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-danger">Proceed</button>
            </form>
        </div>
    </div>
</div>