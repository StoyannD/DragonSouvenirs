@using DragonSouvenirs.Web.ViewModels.Administration.Users
@using System.Linq
@model DragonSouvenirs.Web.ViewModels.Administration.Users.AllUsersViewModel

@if (this.TempData["fail"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @this.TempData["fail"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (this.TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @this.TempData["success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<table class="table table-hover table-bordered text-center"
       style="margin-left: auto; margin-right: auto;">
    <thead class="thead-dark">
        <tr class="text-center">
            <th scope="col">@this.Model.Users.Count()</th>
            <th scope="col">Username</th>
            <th scope="col">Fullname</th>
            <th scope="col">@nameof(ApplicationUserViewModel.Email)</th>
            <th scope="col">Shipping Address</th>
            <th scope="col">@nameof(ApplicationUserViewModel.CreatedOn)</th>
            <th scope="col">@nameof(ApplicationUserViewModel.ModifiedOn)</th>
            <th scope="col">@nameof(ApplicationUserViewModel.IsDeleted)</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < this.Model.Users.Count(); i++)
        {
            <tr class="text-center">
                <th scope="row">@(i+1)</th>
                <partial name="_UserInTablePartial" model="this.Model.Users.ElementAt(i)" />
            </tr>
        }
    </tbody>
</table>