@using System.Linq
@using DragonSouvenirs.Web.ViewModels.Administration
@using DragonSouvenirs.Web.ViewModels.Administration.Categories
@model DragonSouvenirs.Web.ViewModels.Administration.Categories.AllCategoriesViewModel

<div class="container overflow-auto">
    @if (this.TempData["fail"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @this.TempData["fail"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (this.TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @this.TempData["success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <table class="table table-hover table-bordered text-center">
        <thead class="thead-dark">
            <tr class="text-center">
                <th scope="col">@this.Model.Categories.Count()</th>
                <th scope="col">Снимка</th>
                <th scope="col">@nameof(AdminCategoryViewModel.Title)</th>
                <th scope="col">@nameof(AdminCategoryViewModel.Name)</th>
                <th scope="col">Наличност</th>
                <th scope="col">Дата на създаване</th>
                <th scope="col">Изтрит</th>
                <th scope="col">Менажирай</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < this.Model.Categories.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    <partial name="_CategoriesInTablePartial" model="this.Model.Categories.ElementAt(i)" />
                </tr>
            }
        </tbody>
    </table>
</div>