@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div>
    <h4>@ViewData["Title"]</h4>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row">
        <div class="col-md-6">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />

                    <label asp-for="DefaultShippingAddress"></label>
                    <input asp-for="DefaultShippingAddress" class="form-control" disabled/>
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" disabled />
                    <label asp-for="Neighborhood"></label>
                    <input asp-for="Neighborhood" class="form-control" disabled />
                    <label asp-for="Street"></label>
                    <input asp-for="Street" class="form-control" disabled />
                    <label asp-for="StreetNumber"></label>
                    <input asp-for="StreetNumber" class="form-control" disabled />
                    <label asp-for="ApartmentBuilding"></label>
                    <input asp-for="ApartmentBuilding" class="form-control" disabled />
                    <label asp-for="Entrance"></label>
                    <input asp-for="Entrance" class="form-control" disabled />
                    <label asp-for="Floor"></label>
                    <input asp-for="Floor" class="form-control" disabled />
                    <label asp-for="ApartmentNumber"></label>
                    <input asp-for="ApartmentNumber" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-custom">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}